---
// Importamos la URL base configurada en astro.config.mjs
// En local será "/" y en GitHub será "/CPCFI-Webpage/" automáticamente.
const baseUrl = import.meta.env.BASE_URL;
---

<a href={baseUrl + "welcome/bienvenida/"} class="clases-btn">
  Clases
</a>

<style>
  .clases-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    
    background-color: var(--sl-color-text-accent); 
    color: #000000; 
    
    font-weight: 700;
    text-decoration: none;
    font-size: 0.9rem;
    padding: 0.4rem 1rem;
    border-radius: 999px;
    transition: transform 0.2s, opacity 0.2s;
  }

  .clases-btn:hover {
    opacity: 0.9;
    transform: scale(1.05); 
  }
</style>
